mixin pagination(additionalQuery, pageNumber, pagesCount)
    - var n = 1
    - var q = ""
    if additionalQuery
        - q = "&query=" + additionalQuery
    ul.pagination
        if pageNumber > 1
            li.waves-effect
                    - var prev = pageNumber
                    a(href="articles?page=" + --prev + q)
                        i.material-icons.waves-effect
                            | chevron_left
        while n <= pagesCount || n <= 1
            if n == pageNumber
                li.waves-effect.active
                    a(href="articles?page=" + n + q)
                        | #{n++}
            else
                li.waves-effect
                    a(href="articles?page=" + n + q)
                        | #{n++}
        if pageNumber < pagesCount
            li.waves-effect
                        - var next = pageNumber
                        a(href="articles?page=" + ++next + q)
                            i.material-icons.waves-effect
                                | chevron_right