extends ../shared/_master

block append styles
  link(rel='stylesheet', href='/css/user-profile/style-horizontal.css')
  link(rel='stylesheet', href='/css/user-profile/style.css')
block append page-content
  .row
    .col-md-8
      .well
        h2
          | #{firstName} #{lastName}
        p.text-muted
          | @#{username}
        ul.list-group
          li.list-group-item
            strong
              | Profile picture URL: 
            form.form-inline#profile-picture-form
              div.form-group
                input#profile-picture-input(type='file' style="display: none" accept="image/*").form-control
                label(for="profile-picture-input").btn.btn-primary
                  | Choose image
                button(type='submit').btn.btn-primary
                  i.material-icons
                    | send
          li.list-group-item
            strong
              | First name: 
            | #{firstName}
            form(action='/users/' + username + '/settings' method='POST').form-inline
              div.form-group
                input#firstName(type='text' name='firstName' placeholder='Edit first name').form-control
                button(type='submit').btn.btn-primary
                  | Edit
        ul.list-group
          li.list-group-item
            strong
              | Last name: 
            | #{lastName}
            form(action='/users/' + username + '/settings' method='POST').form-inline
              div.form-group
                input#lastName(type='text' name='lastName' placeholder='Edit last name').form-control
                button(type='submit').btn.btn-primary
                  | Edit
        ul.list-group
          li.list-group-item
            strong
              | Birth date: 
            | #{birthDate}
            form(action='/users/' + username + '/settings' method='POST').form-inline
              div.form-group
                input#birthDate(type='text' name='birthDate' placeholder='Edit birth date').form-control
                button(type='submit').btn.btn-primary
                  | Edit
          li.list-group-item
            strong
              | High school: 
            | #{highSchool}
            form(action='/users/' + username + '/settings' method='POST').form-inline
              div.form-group
                input#highSchool(type='text' name='highSchool' placeholder='Edit high school').form-control
                button(type='submit').btn.btn-primary
                  | Edit

block append footer
  script(src='/js/user-profile.js')
  script(src='/js/image-uploading.js')
  script(src="/js/profile-settings.js")