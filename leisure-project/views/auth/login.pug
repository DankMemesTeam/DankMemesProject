extends ../shared/_master

block append styles
    link(rel='stylesheet', href='/css/auth-form.css')
block append footer
    script(src='/js/auth/login.js')
block append page-content
    .login-container.row.center
        .col.s12.m4.offset-m4.z-depth-4.card-panel
            form#login-form.login-form(action="/auth/login" method="POST")
                .row
                    .input-field.col.s12
                        h4 Login
                        p.center Resume where you left off
                .row.margin
                    .input-field.col.s12
                        i.prefix.material-icons person
                        input#usernameInput(name="username", placeholder='Username', required='', autofocus='')
                .row.margin
                    .input-field.col.s12
                        i.prefix.material-icons lock_open
                        input#inputPassword(name="password", type='password', placeholder='Password', required='')
                .row.left
                    .col.s12.m12.l12
                        input#remember-me(type='checkbox')
                        label(for='remember-me') Remember me
                .row
                    .input-field.col.s12
                        button.btn.waves-effect.waves-light.col.s12(type='submit') Login
                .row
                    .input-field.col.s6.m6.l6
                        p.margin.medium-small
                            a(href='/auth/register') Register Now!
                    .input-field.col.s6.m6.l6
                        p.margin.right-align.medium-small
                            a(href='/auth/recover') Forgot password?
