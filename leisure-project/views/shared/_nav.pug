if user
  ul#user-options.dropdown-content
    li
      a(href='/user/' + user.username)
        | My profile
    li
      a(href='/user/' + user.username +'/settings')
        | Settings
    li.divider
    li
      a(href='/auth/logout')
        | Logout

  ul#chat-dropdown.dropdown-content
    li
      a(href='/user/chats')
        | Personal chats
    li.divider(role="separator")
    li
      a(href='/user/event-chats')
        | Event chats
nav
  .nav-wrapper
    a.brand-logo.center.not-selectable(href='/') Leisure
    a.button-collapse(href='#', data-activates='mobile-demo')
      i.material-icons menu
    ul.hide-on-med-and-down
      li
        a(href='/articles')
          | Articles
      li
        a(href='/events')
          | Events
      if user
        li.dropdown
          a.dropdown-button(href='#', data-activates='chat-dropdown')
            | Chats 
            span.caret
    ul.right.hide-on-med-and-down
      if user
        li
          a.dropdown-button(href='#!', data-activates='user-options')
            | Welcome #{user.firstName}
            i.material-icons.right arrow_drop_down
      else
        li
          a(href='/auth/register')
            span.glyphicon-glyphicon-user
            | Register
        li.last-item
          a(href='/auth/login')
            span.glyphicon-glyphicon-log-in
            | Login
    //- Side navbar
    ul#mobile-demo.side-nav
      li.user-details.cyan.darken-2
        .row
          .col.col.s4.m4.l4
            if user && user.profileUrl
              img.circle.z-depth-2.responsive-img.activator(src=user.profileUrl)
            else
              img.circle.z-depth-2.responsive-img.activator(src='http://s3.amazonaws.com/37assets/svn/765-default-avatar.png')
          .col.col.s8.m8.l8
            if user
              a.waves-effect.waves-cyan(href='/user/' + user.username)
                | #{user.firstName + ' ' + user.lastName}
              p.user-roal Project manager
            else
              a.waves-effect.waves-cyan(href='auth/login')
                | Guest
              p.user-roal Random guy
      if user
        li.bold
          a.waves-effect.waves-cyan(href='/user/' + user.username)
            i.material-icons account_box
            |  My profile
        li.bold
          a.waves-effect.waves-cyan(href='/user/' + user.username +'/settings')
            i.material-icons settings
            |  Settings 
        li.bold
          a.waves-effect.waves-cyan(href='/auth/logout')
            i.material-icons exit_to_app
            |  Logout
      else
        li.bold
          a.waves-effect.waves-cyan(href='/auth/register')
            i.material-icons account_box
            |  Register
        li.bold
          a.waves-effect.waves-cyan(href='/auth/login')
            i.material-icons settings
            |  Login 
      li.divider
      li.bold
        a.waves-effect.waves-cyan(href='/articles')
          i.material-icons text_format
          |  Articles
      li.bold
        a.waves-effect.waves-cyan(href='/events')
          i.material-icons event
          |  Events 