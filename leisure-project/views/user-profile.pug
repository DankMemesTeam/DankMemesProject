extends ./shared/_master
block append styles
  link(href='/css/user-profile/style.css', type='text/css', rel='stylesheet', media='screen,projection')
  link(href='/css/user-profile/style-horizontal.css', type='text/css', rel='stylesheet', media='screen,projection')
block append footer
  script(src='/js/user-profile.js')
block append page-content
  #main
    // START WRAPPER
    .wrapper
      // START CONTENT
      section#content
        // start container
        .container
          #profile-page.section
            // profile-page-header
            #profile-page-header.z-depth-2.card
              .card-image.waves-effect.waves-block.waves-light
                img.activator(src='/images/user-profile-bg.jpg', alt='user background')
              figure.card-profile-image
                img.circle.z-depth-2.responsive-img.activator(src=pageUser.profilePic)
              .card-content
                .row
                  .col.s1.right-align.right
                    a.btn-floating.activator.waves-effect.waves-light.darken-2.right
                      i.material-icons 
                        | perm_identity
                .row
                  .col.s12
                    h4.card-title.grey-text.text-darken-4
                      | #{pageUser.firstName} #{pageUser.lastName}
                    p.medium-small.grey-text Project Manager

            // profile-page-content
            #profile-page-content.row
              // profile-page-sidebar
              #profile-page-sidebar.col.s12.m4.l4
                // Profile About
                .card.green.lighten-4
                  .card-content.white-text
                    span.card-title About Me!
                    p
                      | I am a very simple card. I am good at containing small bits of information. I am convenient because I require little markup to use effectively.
                // Profile About
                // Profile About Details
                ul#profile-page-about-details.collection.z-depth-1
                  li.collection-item
                    .row
                      .col.s5.grey-text.darken-1
                        i.material-icons card_travel
                        |  Project
                      .col.s7.grey-text.text-darken-4.right-align ABC Name
                  li.collection-item
                    .row
                      .col.s5.grey-text.darken-1
                        i.material-icons poll
                        |  Skills
                      .col.s7.grey-text.text-darken-4.right-align HTML, CSS
                  li.collection-item
                    .row
                      .col.s5.grey-text.darken-1
                        i.material-icons domain
                        |  Lives in
                      .col.s7.grey-text.text-darken-4.right-align NY, USA
                  li.collection-item
                    .row
                      .col.s5.grey-text.darken-1
                        i.material-icons cake
                        |  Birth date
                      .col.s7.grey-text.text-darken-4.right-align 18th June, 1991
                // / Profile About Details
                // Profile About
                .card.green.darken-2
                  .card-content.white-text.center-align
                    p.card-title
                      i.material-icons group_add
                      |  3685
                    p Followers
                // Profile About
              #profile-page-wall.col.s12.m8
                // profile-page-wall-share
                if isOwner
                  .row
                    .col.s12
                      ul.tabs.tab-profile.z-depth-3.green.lighten-2
                        li.tab.col.s3
                          a.white-text.waves-effect.waves-light.active(href='#UpdateStatus')
                            i.material-icons border_color
                            |  Update Status
                      // UpdateStatus
                      #UpdateStatus.tab-content.col.s12.grey.lighten-4
                        .row
                          .col.s3.m2
                            img.circle.responsive-img.valign.profile-image-post(src=pageUser.profilePic)
                          .input-field.col.s9
                            textarea#textarea.materialize-textarea(row='2')
                            label(for='textarea') What's on your mind?
                        .row
                          .col.s12.m6.right-align.right
                            // Dropdown Trigger
                            a.waves-effect.waves-light.btn
                              i.material-icons.left rate_review
                              | Post
                // / profile-page-wall-share
                // profile-page-wall-posts
                #profile-page-wall-posts.row
                  .col.s12
                    // medium
                    #profile-page-wall-post.card.z-depth-3
                      .card-profile-title
                        .row
                          .col.s3.m1
                            img.circle.responsive-img.valign.profile-post-uer-image(src=pageUser.profilePic)
                          .col.s9
                            p.grey-text.text-darken-4.margin
                              | #{pageUser.firstName} #{pageUser.lastName}
                            span.grey-text.text-darken-1.ultra-small Shared publicly  -  26 Jun 2015
                        .row
                          .col.s12
                            p
                              | I am a very simple wall post. I am good at containing 
                              a(href='#') #small
                              |  bits of 
                              a(href='#') #information
                              | .  I require little more information to use effectively.
                        .card-action
                          .row
                            .col.s4.card-action-share
                              a(href='#') Like
                              a(href='#') Share
                          .divider
                          .row
                            .input-field.col.s8.margin
                              input#profile-comments.validate.margin(type='text' placeholder='Comment')