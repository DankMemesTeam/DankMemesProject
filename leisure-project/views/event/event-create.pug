extends ../shared/_master

block append styles
    link(rel='stylesheet', href='/css/event/create-page.css')
block append footer
    script(src='/js/event/event-create.js')
block append page-content
    script
        include ../../public/js/event/init-maps.js
    .row.center-align
        .col.s12.m8.offset-m2.z-depth-4.card-panel
            #event-form
                .row
                    .col.s6.m6.offset-s3.offset-m3
                        h4.blue-grey-text.lighten-3 Create event
                        p.blue-grey-text.lighten-5.center Now works with Google Maps!
                .row
                    div.input-field.offset-m3.m6.offset-s3.col.s6
                        input#title(type='text' name='title', placeholder='Title')
                .row
                    div.input-field.offset-m3.offset-s3.m6.col.s6
                        input#description(type='text' name='description', placeholder='Description')
                .row
                    div.input-field.offset-m3.offset-s3.m6.col.s6
                        input#location(type='text', placeholder='Location' required)
                        input#event-addr(type="hidden" name="address")
                        input#event-long(type="hidden" name="longitude")
                        input#event-lat(type="hidden" name="latitude")
                .row
                    .switch.offset-m3.offset-s3.m6.col.s6
                        label
                            | Off
                            input#chatCheckbox(name='addChat', type='checkbox')
                            span.lever
                            |       On
                    div#chatTitleContainer.offset-m3.m6.col.offset-s3.s6.hidden
                        input#chatTitle(type='text' name='chatTitle', placeholder='Chat title')
                .row
                    #create-event-btn.btn.waves-effect.waves-light
                        | Publish
                        i.material-icons.right
                            | send
block append footer
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCLFJNN2PJekPGTkfqk_weQTi-u7HCOuaI&libraries=places&callback=initAutocomplete" async defer)
