extends ./shared/_master
block append styles
  link(rel='stylesheet', href='/css/user-profile.css')
  script(src='/js/user-profile.js')
block append page-content
  .row
    .col-md-4
      .well
        .photo-container        
          if profileUrl
            img(src=profileUrl)
          else
            img(src='http://s3.amazonaws.com/37assets/svn/765-default-avatar.png')
          hr
          button.btn.btn-primary#update-picture-btn
            | Update profile pic
    .col-md-8
      .well
        h2
          | #{firstName} #{lastName}
        p.text-muted
          | @#{username}
        ul.list-group
          li.list-group-item
            strong
              | Date joined: 
            | Currently unknown
          li.list-group-item
            strong
              | Birth date: #{birthDate}
          li.list-group-item
            strong
              | High school: #{highSchool}
  .row
    .col-md-12
      .well
        h2
          | Posts
        hr
        form(action='/user/' + username + '/posts', method='POST')
          textarea#postInput.form-control(name='postInput', placeholder='Type in your message', rows='5')
          h6#charCount.pull-right
          button#post-btn.btn.btn-info(type='submit')
            | Publish