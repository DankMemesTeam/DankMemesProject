extends ../shared/_master

include ../mixins/pagination.pug
block append page-content        
    div.row
        ul.dropdown-content#categories-dropdown            
            li
                a(href='/articles')
                    | All
            each cat in categories
                li
                    a(href='/articles/categories/' + cat.name)
                        | #{cat.name}
            else
                li
                    a(href='/articles')
                        | No categories found

    .row
        .col.s12.m10.offset-m1
            if locals.user
                a.waves-effect.waves-light.btn.left(href='/articles/add')
                    | Create article
                    i.material-icons.right
                        | add
            a.btn.dropdown-button.right(data-activates='categories-dropdown')
                | Categories
                i.material-icons.right
                    | arrow_drop_down
        .row
            .col.s12.m10.offset-m1
                nav
                    div.nav-wrapper
                        form
                            div.input-field
                                input#search-article.white(type='search' name='query', placeholder='Type to search for articles...')
                                label.label-icon(for='search-article')
                                    i.material-icons
                                        | search
                                i.material-icons
                                    | close
        .row
            .col.s12.m10.offset-m1
                each article in articles
                    .col.s12.m6
                        .card.z-depth-3
                            .card.grey.lighten-1
                                .card-content.white-text
                                    span.card-title
                                    if locals.user && article.author.username == locals.user.username
                                        a(href='/articles/' + article._id).grey-text.darken-4
                                            | #{article.title}
                                    a(href='/articles/' + article._id + '/edit').btn-floating.halfway-fab.waves-effect.waves-light.red
                                        i.material-icons edit
                                    p
                                        | By #{article.author.username}
                                    p
                                        | #{article.description}
                                .card-action
                                    a(href='#')
                                        | #{article.category}
                else
                    h4.center
                        | No articles found.
        if articles.length > 0
            .row
                +pagination(query, pageNumber, pagesCount, 'articles')            