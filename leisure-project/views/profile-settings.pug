extends ./shared/_master
block append styles
  link(rel='stylesheet', href='/css/user-profile.css')
  script(src='/js/user-profile.js')
block append page-content
  .row
    .col-md-4
      .well
        .photo-container
          img(src=profilePic)
          hr
          form(action="/users/test" method="POST" enctype="multipart/form-data")
            label.btn.btn-default.btn-file.btn-primary
              | Upload profile picture
              input(type='file' name='profile_picture' accept='image/*' style='display:none')#upload-profile-picture
            br
            button.btn.btn-md.btn-primary(type='submit')
              | Upload
    .col-md-8
      .well
        h2
          | #{firstName} #{lastName}
        p.text-muted
          | @#{username}
        ul.list-group
          li.list-group-item
            strong
              | Profile picture URL: 
            form(action='/users/' + username + '/settings' method='POST').form-inline
              div.form-group
                input#profilePic(type='text' name='profilePic' placeholder='Enter picture url').form-control
                button(type='submit').btn.btn-primary
                  | Edit
          li.list-group-item
            strong
              | First name: 
            | #{firstName}
            form(action='/users/' + username + '/settings' method='POST').form-inline
              div.form-group
                input#firstName(type='text' name='firstName' placeholder='Edit first name').form-control
                button(type='submit').btn.btn-primary
                  | Edit
        ul.list-group
          li.list-group-item
            strong
              | Last name: 
            | #{lastName}
            form(action='/users/' + username + '/settings' method='POST').form-inline
              div.form-group
                input#lastName(type='text' name='lastName' placeholder='Edit last name').form-control
                button(type='submit').btn.btn-primary
                  | Edit
        ul.list-group
          li.list-group-item
            strong
              | Birth date: 
            | #{birthDate}
            form(action='/users/' + username + '/settings' method='POST').form-inline
              div.form-group
                input#birthDate(type='text' name='birthDate' placeholder='Edit birth date').form-control
                button(type='submit').btn.btn-primary
                  | Edit
          li.list-group-item
            strong
              | High school: 
            | #{highSchool}
            form(action='/users/' + username + '/settings' method='POST').form-inline
              div.form-group
                input#highSchool(type='text' name='highSchool' placeholder='Edit high school').form-control
                button(type='submit').btn.btn-primary
                  | Edit